{
  "name": "esearch",
  "version": "1.0.0",
  "private": true,
  "description": "ecommerce search app",
  "scripts": {
    "build": "tsc --build --verbose",
    "lint": "eslint . --ext .ts,.mts,.cts",
    "lint:fix": "eslint . --ext .ts,.mts,.cts --fix",
    "format": "prettier --write \"**/*.{ts,json}\"",
    "format:check": "prettier --check \"**/*.{ts,json}\"",
    "type-check": "tsc --noEmit"
  },
  "devDependencies": {
    "@eslint/js": "^9.21.0",
    "eslint": "^9.21.0",
    "globals": "^16.0.0",
    "typescript-eslint": "^8.25.0"
  },
  "workspaces": [
    "src/Merchant",
    "src/Shared"
  ],
  "author": "Guilherme Jorge do Vale",
  "license": "ISC",
  "dependencies": {
    "eslint-config-prettier": "^10.0.2",
    "eslint-plugin-prettier": "^5.2.3",
    "prettier": "^3.5.2"
  }
}
